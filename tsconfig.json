{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "outDir": "./dist",
    "baseUrl": "./",
  }
}
